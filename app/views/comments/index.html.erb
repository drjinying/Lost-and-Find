<section class="panel">
<h4 class="panel-heading">评论列表：</h4>

<table class="table table-condensed">
  <thead class="table-heading">
    <tr>
      <th>标题</th>
      <th width="50%">详情</th>
      <th width="210">用户</th>
      <th width="150" class="pull-right">行动</th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.body %></td>
        <td><%= comment.user.email %></td>
        <td class="pull-right" >
          <%= link_to '查看', post_comment_path(comment[:post_id],comment[:id]) , class: 'label label-notify' %>
         | <%= link_to '编辑', post_comment_path(comment[:post_id], comment[:id]), class: 'label label-warning btn-xs' %> | 
        <%= link_to '删除', post_comment_path(comment[:post_id],comment[:id]), method: :delete, data: { confirm: '确认删除吗?' }, class: 'label label-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '撰写启示', new_post_comment_path , class: 'btn btn-danger'%>
</section>
