<section class="panel">
<h4 class="panel-heading">全部招领信息</h4>

<table class="table table-condensed">
  <thead class="table-heading">
    <tr>
      <th width="150">标题</th>
      <th >内容</th>
      <th width="210">联系人</th>
      <th width="40">评论</th>
      <th width="170"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user.email %></td>
        <td><%= post.comments.length %></td>
        <td>
          <%= link_to '查看', post , class: 'label label-notify' %>
          <% if can? :update, post %>
         | <%= link_to '编辑', edit_post_path(post), class: 'label label-warning btn-xs' %> | 
         <% end %>
         <% if can? :destroy, post %>
        <%= link_to '删除', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'label label-danger btn-xs' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Post %>
  <%= link_to '撰写启示', new_post_path , class: 'btn btn-danger'%>
<% end %>
</section>